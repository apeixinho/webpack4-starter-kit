{
  "name": "webpack4-starter-kit",
  "version": "1.0.1",
  "description": "Webpack 4 starter kit",
  "main": "./src/index.ts",
  "scripts": {
    "postinstall": "yarn run build",
    "dev": "node ./config/dev",
    "build": "node ./config/prod",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "tc": "tsc --noEmit",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' ava-ts",
    "httpserver": "http-server ./dist -p 8082 --silent"
  },
  "author": "Giorgio Gamberoni <giorgio.gamberoni@gmail.com> (https://github.com/king-prawns)",
  "license": "MIT",
  "homepage": "https://github.com/king-prawns/webpack4-starter-kit#readme",
  "ava": {
    "files": [
      "./src/**/*test.ts"
    ],
    "failFast": true,
    "failWithoutAssertions": false,
    "require": [
      "ts-node/register"
    ]
  },
  "devDependencies": {
    "@types/node": "9.6.6",
    "autoprefixer": "8.3.0",
    "ava": "0.25.0",
    "ava-ts": "0.24.3",
    "chalk": "2.4.0",
    "copy-webpack-plugin": "4.5.1",
    "css-loader": "0.28.11",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "file-loader": "1.1.11",
    "fs-extra": "5.0.0",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "http-server": "0.11.1",
    "node-sass": "4.8.3",
    "nyc": "11.7.1",
    "offline-plugin": "4.9.0",
    "opn": "5.3.0",
    "ora": "2.0.0",
    "postcss-loader": "2.1.4",
    "resolve-url-loader": "2.3.0",
    "sass-loader": "7.0.1",
    "style-loader": "0.21.0",
    "stylelint": "9.2.0",
    "stylelint-config-standard": "18.2.0",
    "stylelint-webpack-plugin": "0.10.4",
    "ts-loader": "4.2.0",
    "ts-node": "6.0.0",
    "tslint": "5.9.1",
    "tslint-config-airbnb": "5.8.0",
    "tslint-loader": "3.6.0",
    "typescript": "2.8.3",
    "url-loader": "1.0.1",
    "webpack": "4.6.0",
    "webpack-cli": "2.0.15",
    "webpack-dev-server": "3.1.3",
    "webpack-merge": "4.1.2"
  },
  "dependencies": {
    "@webcomponents/webcomponentsjs": "1.2.0"
  }
}
